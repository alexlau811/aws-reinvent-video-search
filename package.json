{
  "name": "aws-reinvent-video-search",
  "version": "1.0.0",
  "description": "Client-side video search platform for AWS re:Invent 2025 conference videos",
  "private": true,
  "workspaces": [
    "packages/data-pipeline",
    "packages/client-app"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "dev:pipeline": "npm run dev -w packages/data-pipeline",
    "dev:client": "npm run dev -w packages/client-app",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}